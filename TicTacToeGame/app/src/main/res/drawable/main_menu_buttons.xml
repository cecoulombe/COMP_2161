<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for pressed state -->
            <gradient
                android:startColor="@color/mainMenuButtonStartPressed"
                android:endColor="@color/mainMenuButtonEndPressed"
                android:angle="270" />
            <corners android:radius="5dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for default state -->
            <gradient
                android:startColor="@color/mainMenuButtonStartDefault"
                android:endColor="@color/mainMenuButtonEndDefault"
                android:angle="270" />
            <corners android:radius="5dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</layer-list>
