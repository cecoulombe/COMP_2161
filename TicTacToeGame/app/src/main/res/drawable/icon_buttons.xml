<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#806D6D6D" /> <!-- Shadow color, semi-transparent black -->
            <corners android:radius="360dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for pressed state -->
            <gradient
                android:startColor="#959595"
                android:endColor="#616161"
                android:angle="270" />
            <corners android:radius="360dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for default state -->
            <gradient
                android:startColor="#E7E7E7"
                android:endColor="#929292"
                android:angle="270" />
            <corners android:radius="360dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</layer-list>
