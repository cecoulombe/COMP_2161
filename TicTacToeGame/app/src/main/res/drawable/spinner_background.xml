<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/headerBackground" /> <!-- Background color -->
            <corners android:radius="4dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>
    <item android:top="10dp" android:right="10dp">
        <bitmap android:src="@android:drawable/arrow_down_float"
            android:gravity="right|center_vertical"
            android:width="16dp"
            android:height="16dp" />
    </item>
</layer-list>
