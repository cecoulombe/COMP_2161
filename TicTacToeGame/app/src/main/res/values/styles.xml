<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layouts">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="layout2">
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="listLayouts">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="iconButtons">
        <item name="android:background">@drawable/icon_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>

        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

<!--  Main Activity  -->
    <style name="welcomeMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="listButtons">
        <item name="android:background">@drawable/main_menu_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--Enter Name Activity-->
    <style name="enterNameMsgStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="enterNameEditText">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="saveButton">
        <item name="android:background">@drawable/main_menu_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="existingNamesLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>

    <!--Show Standings Activity-->
    <style name="showStandingsMsgStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>

    <!-- Settings Activity -->
    <style name="CustomPreference" parent="Preference">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:titleTextColor">@color/textColor</item>
    </style>

    <!--  Play Game Activity  -->
    <style name="buttonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="winStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/winColor</item>
    </style>
    <style name="spinStyle" parent="Widget.AppCompat.Spinner">
<!--        <item name="android:background">@drawable/spinner_background</item>-->
        <item name="android:background">@color/headerBackground</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="startButtonStyle">
        <item name="android:background">@drawable/main_menu_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="newGameButtonStyle">
        <item name="android:background">@drawable/main_menu_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="statsViewStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="resetButton">
        <item name="android:background">@drawable/reset_button</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
