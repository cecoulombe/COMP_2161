<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layoutStyle">
        <item name="android:background">@color/backgroundColor</item>
    </style>
    <style name="appTitleStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="instructionsTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="noAccountTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
    <style name="signInButton">
        <item name="android:background">@drawable/sign_in_button</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="signUpButton">
        <item name="android:background">@drawable/sign_in_button</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="activitySelectionButtonStyle">
        <item name="android:background">@drawable/activity_selection_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">1dp</item>
    </style>
    <style name="signOutButton">
        <item name="android:background">@drawable/activity_selection_buttons</item> <!-- Ensure this drawable exists -->
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">1dp</item>
    </style>

<!--  Welcome activity  -->
    <style name="welcomeInstructionsTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item> <!-- Ensure this color exists -->
    </style>
</resources>