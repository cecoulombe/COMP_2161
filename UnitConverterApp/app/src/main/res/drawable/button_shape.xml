<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#707070"/>  <!-- Darker grey for pressed state -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#707070"/>  <!-- Darker grey for focused state -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#909090"/>  <!-- Medium grey color for default state -->
            <corners android:radius="0dp"/>
        </shape>
    </item>
</selector>
