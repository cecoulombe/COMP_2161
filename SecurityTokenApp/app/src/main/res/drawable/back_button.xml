<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color, semi-transparent black -->
            <corners android:radius="360dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for pressed state -->
            <gradient
                android:startColor="#1A1A1A"
                android:endColor="#000000"
                android:angle="270" />
            <corners android:radius="360dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- State when focused/hovered -->
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for focused state -->
            <gradient
                android:startColor="#4C4C4C"
                android:endColor="#2C2C2C"
                android:angle="270" />
            <corners android:radius="360dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Gradient for default state -->
            <gradient
                android:startColor="#5C5C5C"
                android:endColor="#3A3A3A"
                android:angle="270" />
            <corners android:radius="360dp" />
<!--            <padding-->
<!--                android:left="1dp"-->
<!--                android:top="1dp"-->
<!--                android:right="1dp"-->
<!--                android:bottom="1dp" />-->
        </shape>
    </item>
</layer-list>
